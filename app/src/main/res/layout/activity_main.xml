<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/random_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@id/random_name_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/random_name_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:fontFamily="sans-serif-light"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/randomNameButtonText"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/random_name_text_view" />

    <Button
        android:id="@+id/nav_to_saved_names"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:outlineProvider="none"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:text="@string/nav_to_saved_names_text"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:fontFamily="sans-serif-light"
        android:outlineProvider="none"
        android:text="@string/saveButtonText"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/random_name_button" />

</androidx.constraintlayout.widget.ConstraintLayout>